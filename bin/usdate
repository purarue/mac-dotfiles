#!/usr/bin/env python3
#
# Prints the date in the US format, because I'm used to the European

"""Usage: usdate [--dash] [--underscore] [--help]

usdate --dash           use dashes instead of forward slashes as seperators
usdate --underscore     use underscores instead of forward slashes as seperators
usdate --help           show this help message
"""

import subprocess
import docopt

args = docopt.docopt(__doc__)

if args["--dash"]:
    subprocess.run("date +%m-%d-%y", shell=True)
elif args["--underscore"]:
    subprocess.run("date +%m_%d_%y", shell=True)
else:
    subprocess.run("date +%m/%d/%y", shell=True)
