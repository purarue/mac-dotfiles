#!/usr/bin/env python3

"""Usage:
    tvsearch TVSHOW_NAME... [--help]

searches for a tv show on 'trakt', opens search results in your default browser

Example:
    tvsearch the office
"""

import sys
import webbrowser
from urllib.parse import urlencode

import docopt

docopt.docopt(__doc__)

search_string = " ".join(sys.argv[1:]).strip()
webbrowser.open_new_tab("https://trakt.tv/search/shows?{}".format(urlencode({'query': search_string, 'utf8': 'âœ“'})))
