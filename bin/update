#!/usr/bin/env bash
#
# updates brew, python, and anything from the mac app store

# updating brew
bash -x "${DOTDIR}/homebrew/install.sh"

# updating python
bash -x "${DOTDIR}/python3/install.sh"

# update global node modules
bash -x "${DOTDIR}/node/install.sh"

# updating macos software/OS updates
if [[ $(uname -s) == "Darwin" ]]; then
  "${DOTDIR}/macos/update.sh" 2>&1
fi
