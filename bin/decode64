#!/usr/bin/env python3

"""Usage: decode64 SUBSTR HASH"""

# Will repetitvely decode HASH till SUBSTR is in decoded string

import sys
import base64

import docopt

args = docopt.docopt(__doc__)
hash = args['HASH']

while args['SUBSTR'].lower() not in str(hash.lower()):
    hash = base64.b64decode(hash)

print(str(hash, "utf-8"))
